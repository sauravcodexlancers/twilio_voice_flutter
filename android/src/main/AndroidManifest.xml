<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="federico.amura.flutter_twilio">

    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.DISABLE_KEYGUARD" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.USE_FULL_SCREEN_INTENT" />

    <application>
        <activity
            android:name="federico.amura.flutter_twilio.BackgroundCallJavaActivity"
            android:exported="true"
            android:excludeFromRecents="true"
            android:screenOrientation="portrait"
            android:showOnLockScreen="true"
            android:showWhenLocked="true"
            android:taskAffinity=".BackgroundCallJavaActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar"
            android:turnScreenOn="true">

            <intent-filter>
                <action android:name="background-activity" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

        </activity>

        <service
            android:name="federico.amura.flutter_twilio.IncomingCallNotificationService"
            android:enabled="true"
            android:exported="false" />

        <meta-data
            android:name="flutterEmbedding"
            android:value="2" />

    </application>


</manifest>
